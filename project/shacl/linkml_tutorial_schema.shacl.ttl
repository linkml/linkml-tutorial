@prefix PATO: <http://purl.obolibrary.org/obo/PATO_> .
@prefix linkml_tutorial_schema: <https://w3id.org/linkml/linkml-tutorial-schema/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

schema:Thing a sh:NodeShape ;
    sh:closed true ;
    sh:description "The most generic type of entity that has a name" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:description "A human-readable name for a person" ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path schema:name ],
        [ sh:description "Number of years since birth" ;
            sh:maxCount 1 ;
            sh:order 3 ;
            sh:path linkml_tutorial_schema:age_in_years ],
        [ sh:description "A unique identifier for a person" ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:order 0 ;
            sh:path schema:identifier ],
        [ sh:description "Date on which a person is born" ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path schema:birthDate ] ;
    sh:targetClass schema:Thing .

linkml_tutorial_schema:AnimalCollection a sh:NodeShape ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:class linkml_tutorial_schema:Animal ;
            sh:description "A collection of animals" ;
            sh:nodeKind sh:IRI ;
            sh:order 0 ;
            sh:path linkml_tutorial_schema:animals ] ;
    sh:targetClass linkml_tutorial_schema:AnimalCollection .

linkml_tutorial_schema:PersonCollection a sh:NodeShape ;
    sh:closed true ;
    sh:description "A collection of things" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:class schema:Person ;
            sh:description "A collection of things" ;
            sh:nodeKind sh:IRI ;
            sh:order 0 ;
            sh:path linkml_tutorial_schema:entries ] ;
    sh:targetClass linkml_tutorial_schema:PersonCollection .

schema:Person a sh:NodeShape ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:description "this is a unique identifier for a person." ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:order 3 ;
            sh:path schema:identifier ],
        [ sh:description "The main email address of a person" ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path schema:email ;
            sh:pattern "^\\S+@[\\S+\\.]+\\S+" ],
        [ sh:description "A human-readable name for a person" ;
            sh:maxCount 1 ;
            sh:order 4 ;
            sh:path schema:name ],
        [ sh:description "Date on which a person is born" ;
            sh:maxCount 1 ;
            sh:order 5 ;
            sh:path schema:birthDate ],
        [ sh:class linkml_tutorial_schema:Animal ;
            sh:description "a collection of animals that lives with and is taken care of by a person." ;
            sh:nodeKind sh:IRI ;
            sh:order 2 ;
            sh:path linkml_tutorial_schema:pets ],
        [ sh:description "Number of years since birth" ;
            sh:maxCount 1 ;
            sh:order 6 ;
            sh:path linkml_tutorial_schema:age_in_years ],
        [ sh:description "living or dead status" ;
            sh:in ( PATO:0001421 PATO:0001422 "UNKNOWN" ) ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:order 1 ;
            sh:path linkml_tutorial_schema:vital_status ] ;
    sh:targetClass schema:Person .

linkml_tutorial_schema:Animal a sh:NodeShape ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:description "Number of years since birth" ;
            sh:maxCount 1 ;
            sh:order 7 ;
            sh:path linkml_tutorial_schema:age_in_years ],
        [ sh:description "A unique identifier for a person" ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:order 4 ;
            sh:path schema:identifier ],
        [ sh:description "The color of an animal" ;
            sh:maxCount 1 ;
            sh:order 2 ;
            sh:path linkml_tutorial_schema:color ],
        [ sh:description "The weight of an animal in milligrams" ;
            sh:maxCount 1 ;
            sh:order 3 ;
            sh:path linkml_tutorial_schema:weight_in_mgs ],
        [ sh:description "The breed of an animal" ;
            sh:maxCount 1 ;
            sh:order 1 ;
            sh:path linkml_tutorial_schema:breed ],
        [ sh:description "Date on which a person is born" ;
            sh:maxCount 1 ;
            sh:order 6 ;
            sh:path schema:birthDate ],
        [ sh:description "A human-readable name for a person" ;
            sh:maxCount 1 ;
            sh:order 5 ;
            sh:path schema:name ],
        [ sh:description "The species of an animal" ;
            sh:maxCount 1 ;
            sh:order 0 ;
            sh:path linkml_tutorial_schema:species ] ;
    sh:targetClass linkml_tutorial_schema:Animal .

